# vim: filetype=sh

# eval "$(starship init zsh)"

setopt prompt_subst

git_root_name() {
  local root
  root=$(git rev-parse --show-toplevel 2>/dev/null) || return
  echo " ${root:t} "
}

PROMPT='
%F{$color0}%K{$color1} %? %K{$color2} %n %K{$color3}$(git_root_name)%k
%F{$color2}‚ùØ %f'

export VIRTUAL_ENV_DISABLE_PROMPT=1
export PROMPT=${PROMPT}
